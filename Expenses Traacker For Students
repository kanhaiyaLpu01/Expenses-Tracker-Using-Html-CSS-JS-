<body>
  <h1>üí∞ Expense Tracker</h1>

  <!-- Input Form -->
  <div class="card">
    <input type="number" id="amount" placeholder="Enter Amount (‚Çπ)">
    <select id="category">
      <option value="">Select Category</option>
      <option>üçî Food</option>
      <option>üöñ Travel</option>
      <option>üìö Study</option>
      <option>üéâ Entertainment</option>
      <option>Other</option>
    </select>
    <button onclick="addExpense()">‚ûï Add Expense</button>
  </div>

  <!-- Total Expense -->
  <div class="total-box">
    Total Expense: ‚Çπ<span id="total">0</span>
  </div>

  <!-- Expense List -->
  <div class="card">
    <h3 style="margin-bottom: 10px;">üìú Expense History</h3>
    <div id="list"></div>
  </div>

  <script>
    let expenses = JSON.parse(localStorage.getItem("expenses")) || [];

    function addExpense() {
      let amount = document.getElementById("amount").value;
      let category = document.getElementById("category").value;

      if(amount === "" || category === "") return alert("Please enter all details!");

      let expense = {
        amount: parseInt(amount),
        category: category,
        date: new Date().toLocaleDateString()
      };

      expenses.push(expense);
      localStorage.setItem("expenses", JSON.stringify(expenses));
      document.getElementById("amount").value = "";
      document.getElementById("category").value = "";
      showExpenses();
    }

    function showExpenses() {
      let list = document.getElementById("list");
      let total = 0;
      list.innerHTML = "";
      expenses.forEach((e, i) => {
        total += e.amount;
        list.innerHTML += `
          <div class="expense">
            <span>${e.category} - ‚Çπ${e.amount} <br><small>${e.date}</small></span>
            <button class="delete-btn" onclick="deleteExpense(${i})">Delete</button>
          </div>`;
      });
      document.getElementById("total").innerText = total;
    }

    function deleteExpense(index) {
      expenses.splice(index, 1);
      localStorage.setItem("expenses", JSON.stringify(expenses));
      showExpenses();
    }

    showExpenses();
  </script>
</body>
